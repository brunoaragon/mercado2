                    <label>Taxa de Serviço</label>
                </field>

                <field id="token" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom API Token</label>
                    <comment>Token de acesso na consulta do catálogo</comment>
                </field>

                <field id="tokencep" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Get CEP Token</label>
                    <comment>Token de acesso na consulta de cep</comment>
                </field>
